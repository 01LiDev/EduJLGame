<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#BCA"
            android:padding="10dp">

            <Button
                android:id="@+id/up_move_Btn"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_arrow_upward_24"
                android:tag="UP" />

            <Button
                android:id="@+id/down_move_Btn"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_arrow_downward_24"
                android:tag="DOWN" />

            <Button
                android:id="@+id/forward_move_Btn"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_arrow_forward_24"
                android:tag="FORWARD" />

            <Button
                android:id="@+id/back_move_Btn"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:tag="BACK" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="#BBB"
            android:orientation="horizontal"
            android:padding="2dp"
            >


            <ImageView
                android:id="@+id/holder01"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/bordor"
                />

            <ImageView
                android:id="@+id/holder02"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/bordor"
                />

            <ImageView
                android:id="@+id/holder03"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/bordor"
                />

            <ImageView
                android:id="@+id/holder04"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/bordor"
                />

            <ImageView
                android:id="@+id/holder05"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/bordor"
                />

            <ImageButton
                android:id="@+id/play"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/ic_baseline_play_circle_outline_24" />


        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="6"

        android:background="@color/design_default_color_secondary">

        <ImageView
            android:id="@+id/character"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:translationZ="30dp"
            android:src="@drawable/bugsbunny" />





    </FrameLayout>




</androidx.appcompat.widget.LinearLayoutCompat>